@model Item

<div asp-validation-summary="All"></div>
<h4>We recently found this item...</h4>
<div class="singleitem">
    <h2> @Model.Description</h2>
    <p><em>Found On -</em> 12-10-2016</p>
    <p><em>Found By-</em> <a href="/finder/@Model.FinderId">@Model.Finder.Name</a></p>
</div>
<div>
    <h3> Is it yours?</h3>
    <h6> If YES, give <a href="/finder/@Model.FinderId">@Model.Finder.Name</a> a call/email to confirm and arrange a pickup time.</h6>
    <h6> If NO, keep <a href="/search">searching</a>. We're hopeful it will turn up sooner than later.</h6>
</div>